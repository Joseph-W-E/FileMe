<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/server_image_view_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/server_image_view_item_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: default"
            style="@style/AppTextView"/>

        <TextView
            android:id="@+id/server_image_view_item_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: default"
            style="@style/AppTextView"/>

        <TextView
            android:id="@+id/server_image_view_item_txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description: default"
            style="@style/AppTextView"/>

        <TextView
            android:id="@+id/server_image_view_item_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date: default"
            style="@style/AppTextView"/>

    </LinearLayout>

</LinearLayout>